<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SucupiraApp.MainPage"
             Title="Início">

    <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">

        <Label Text="Bem-vindo ao SucupiraApp"
               FontSize="24"
               HorizontalOptions="Center" />

        <Button Text="Cadastrar Professor"
                Clicked="OnCadastrarProfessorClicked"
                BackgroundColor="#007bff"
                TextColor="White"
                CornerRadius="10"
                Padding="10" />

        <Button Text="Listar Professores"
                Clicked="OnListarProfessorClicked"
                BackgroundColor="#17a2b8"
                TextColor="White"
                CornerRadius="10"
                Padding="10" />

        <Button Text="Testar Conexão com Banco"
                Clicked="OnTestarConexaoClicked"
                BackgroundColor="#28a745"
                TextColor="White"
                CornerRadius="10"
                Padding="10" />

    </VerticalStackLayout>
</ContentPage>
