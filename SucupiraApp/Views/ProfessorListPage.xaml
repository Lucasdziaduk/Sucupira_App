<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SucupiraApp.Views.ProfessorListPage"
             Title="Professores">

    <VerticalStackLayout Padding="20" Spacing="10">

        <CollectionView x:Name="ProfessoresCollection">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" CornerRadius="10" Padding="10" Margin="5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Nome}" FontAttributes="Bold" FontSize="16"/>
                            <Label Text="{Binding Email}" FontSize="14"/>
                            <Label Text="{Binding NivelPermissao}" FontSize="14" TextColor="Gray"/>

                            <HorizontalStackLayout Spacing="10">
                                <Button Text="Editar"
                                        Clicked="OnEditarClicked"
                                        BackgroundColor="#4CAF50"
                                        TextColor="White"
                                        CornerRadius="5"/>
                                <Button Text="Excluir"
                                        Clicked="OnExcluirClicked"
                                        BackgroundColor="#F44336"
                                        TextColor="White"
                                        CornerRadius="5"/>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>

</ContentPage>
